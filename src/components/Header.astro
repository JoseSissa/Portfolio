---
import GithubIcon from "./icons/GithubIcon.astro";
import LinkedinIcon from "./icons/LinkedinIcon.astro";
import SocialPill from "../components/SocialPill.astro";
---

<header
    class="w-full lg:sticky lg:top-0 lg:max-h-screen lg:w-5/12 lg:flex lg:justify-between lg:flex-col lg:pt-16 lg:pb-20"
>
    <div class="mb-8 md:mb-0">
        <h1
            class="text-4xl sm:text-5xl font-bold mb-3 text-colorPrimary
            lg:pt-8"
        >
            Jose Sissa
            <!-- <div class="flex justify-center items-center">
                <Badge>Disponible</Badge>
            </div> -->
        </h1>
        <h2 class="sm:text-xl font-medium text-myBlue">
            Ingeniero de Sistemas <br />Desarrollador Web
        </h2>
    </div>

    <ul class="flex items-center gap-x-4">
        <li>
            <SocialPill href="https://www.linkedin.com/in/josesissamendoza/" address="Linkedin">
                <LinkedinIcon class="size-8" />
            </SocialPill>
        </li>
        <li>
            <SocialPill href="https://github.com/JoseSissa" address="GitHub">
                <GithubIcon class="size-8" />
            </SocialPill>
        </li>
    </ul>
</header>
